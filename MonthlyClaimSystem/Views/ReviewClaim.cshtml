@{
    ViewData["Title"] = "Review Claim";
    var claimId = ViewBag.ClaimId;
}

<h2 class="mb-4"><i class="fas fa-search me-2"></i>Review Claim #@claimId</h2>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Claim Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Lecturer:</strong> Dr. Johnson</p>
                <p><strong>Month/Year:</strong> March 2024</p>
                <p><strong>Department:</strong> Computer Science</p>
            </div>
            <div class="col-md-6">
                <p><strong>Total Hours:</strong> 38</p>
                <p><strong>Total Amount:</strong> R7,600</p>
                <p><strong>Status:</strong> <span class="badge bg-info">Submitted</span></p>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Claim Items</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2024-03-01</td>
                        <td>Lecture: Advanced Programming</td>
                        <td>4</td>
                        <td>R200</td>
                        <td>R800</td>
                    </tr>
                    <tr>
                        <td>2024-03-05</td>
                        <td>Tutorial: Data Structures</td>
                        <td>3</td>
                        <td>R200</td>
                        <td>R600</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Supporting Documents</h5>
    </div>
    <div class="card-body">
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action">
                <i class="fas fa-file-pdf me-2 text-danger"></i>timesheet_march_2024.pdf
            </a>
            <a href="#" class="list-group-item list-group-item-action">
                <i class="fas fa-file-word me-2 text-primary"></i>approval_email.docx
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Approval Decision</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="comments" class="form-label">Comments</label>
            <textarea class="form-control" id="comments" rows="3" placeholder="Add comments for approval or rejection"></textarea>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-success">
                <i class="fas fa-check me-2"></i>Approve
            </button>
            <button class="btn btn-danger">
                <i class="fas fa-times me-2"></i>Reject
            </button>
            <a asp-controller="Claim" asp-action="ApprovalDashboard" class="btn btn-outline-secondary ms-auto">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>