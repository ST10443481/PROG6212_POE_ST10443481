@{
    ViewData["Title"] = "Submit New Claim";
}

<h2 class="mb-4"><i class="fas fa-plus-circle me-2"></i>Submit New Claim</h2>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Claim Details</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="month" class="form-label">Month</label>
                    <select class="form-select" id="month">
                        <option value="">Select Month</option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="year" class="form-label">Year</label>
                    <select class="form-select" id="year">
                        <option value="">Select Year</option>
                        <option value="2024">2024</option>
                        <option value="2023">2023</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Claim Items</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="claimItemsTable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="date" class="form-control form-control-sm"></td>
                        <td><input type="text" class="form-control form-control-sm" placeholder="Activity description"></td>
                        <td><input type="number" class="form-control form-control-sm" placeholder="Hours"></td>
                        <td><input type="number" class="form-control form-control-sm" placeholder="Rate" value="200"></td>
                        <td>R0.00</td>
                        <td><button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-end"><strong>Grand Total:</strong></td>
                        <td><strong>R0.00</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <button class="btn btn-outline-primary mt-2" id="addRowBtn">
            <i class="fas fa-plus me-2"></i>Add Item
        </button>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Supporting Documents</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="documentUpload" class="form-label">Upload supporting documents</label>
            <input type="file" class="form-control" id="documentUpload" multiple>
            <div class="form-text">Upload timesheets, approval emails, or other supporting documents.</div>
        </div>
        <div id="uploadedFiles" class="mt-3">
            <p class="text-muted">No documents uploaded yet.</p>
        </div>
    </div>
</div>

<div class="mt-4">
    <button type="submit" class="btn btn-success me-2">
        <i class="fas fa-paper-plane me-2"></i>Submit Claim
    </button>
    <button type="button" class="btn btn-outline-secondary">
        <i class="fas fa-save me-2"></i>Save Draft
    </button>
    <a asp-controller="Home" asp-action="MyClaims" class="btn btn-outline-danger ms-2">
        <i class="fas fa-times me-2"></i>Cancel
    </a>
</div>

@section Scripts {
    <script>
        // This would be implemented for the functional version
        document.getElementById('addRowBtn').addEventListener('click', function() {
            alert('Add row functionality will be implemented in the next phase.');
        });
    </script>
}