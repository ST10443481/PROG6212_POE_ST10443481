@{
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list me-2"></i>My Claims</h2>
    <a asp-controller="Claim" asp-action="SubmitClaim" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Submit New Claim
    </a>
</div>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Search claims...">
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option value="">All Statuses</option>
                    <option value="submitted">Submitted</option>
                    <option value="approved">Approved</option>
                    <option value="rejected">Rejected</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option value="">All Months</option>
                    <option value="1">January</option>
                    <option value="2">February</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100">Filter</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Month/Year</th>
                        <th>Total Hours</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Submitted Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>CLM-001</td>
                        <td>January 2024</td>
                        <td>40</td>
                        <td>R8,000</td>
                        <td><span class="badge bg-success">Approved</span></td>
                        <td>2024-01-31</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">View</button>
                            <button class="btn btn-sm btn-outline-secondary">Documents</button>
                        </td>
                    </tr>
                    <tr>
                        <td>CLM-002</td>
                        <td>February 2024</td>
                        <td>35</td>
                        <td>R7,000</td>
                        <td><span class="badge bg-warning">Pending Review</span></td>
                        <td>2024-02-28</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">View</button>
                            <button class="btn btn-sm btn-outline-info">Edit</button>
                            <button class="btn btn-sm btn-outline-secondary">Documents</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>